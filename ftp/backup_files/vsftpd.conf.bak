#Basic configuration settings
anonymous_enable=YES
listen_ipv6=NO
dirmessage_enable=YES
use_localtime=YES
xferlog_enable=YES
secure_chroot_dir=/var/run/vsftpd/empty
pam_service_name=vsftpd
rsa_cert_file=/etc/ssl/certs/ssl-cert-snakeoil.pem
rsa_private_key_file=/etc/ssl/private/ssl-cert-snakeoil.key
ssl_enable=NO
#1.Standalone mode activated
listen=YES
#2.Banner configuration
ftpd_banner=--- Welcome to the FTP server of 'sistema.sol'---
#3. Anonymous users banner
#
#4. Port 20 enabled
connect_from_port_20=YES
#5. Idle session timeout
idle_session_timeout=720
#6. Max clients
max_clients=15
#7. Local users max bandwidth
local_max_rate=5242880
#8. Anonymous max bandwidth
anon_max_rate=2097152
#9. Anonymous can download, not upload
anon_upload_enable=NO
anon_mkdir_write_enable=NO
anon_other_write_enable=NO
#10. Local users can upload and download
local_enable=YES
write_enable=YES
allow_writeable_chroot=YES
chroot_list_file=/etc/vsftpd.chroot_list
local_umask=077
#11. Maria is not in chroot, the rest of the local users are
chroot_local_user=YES
chroot_list_enable=YES
#12. Listen port 21
listen_port=21


